<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= render 'layouts/analytics' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= favicon_link_tag("https://coped.s3-us-west-1.amazonaws.com/icons/favicon.ico") %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
    <script>
      if (document.querySelector(".navbar-burger")) {
        document.querySelector(".navbar-burger").addEventListener("click", () => {
          document.querySelector(".navbar-burger").classList.toggle("is-active");
          document.querySelector(".navbar-menu").classList.toggle("is-active");
        });
      }
      if (document.querySelector("#banner-button")) {
        document.querySelector("#banner-button").addEventListener("click", () => {
          document.querySelector("#navbar").scrollIntoView({ behavior: "smooth" });
        });
      }
    </script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  </body>
</html>
