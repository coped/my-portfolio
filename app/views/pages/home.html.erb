<% provide(:title, "Dennis Cope") %>
<% provide(:page, "home") %>
<section id="header" class="hero is-dark is-bold is-fullheight">
    <div class="hero-head">
    </div>
    <div class="hero-body">
        <div class="container">
            <section class="section">
                <h1 class="title has-text-centered has-text-weight-light is-size-1">
                    Dennis <span class="blue">Cope</span>
                </h1>
                <h2 class="subtitle has-text-centered has-text-weight-light">
                    Jr Fullstack <span class="blue">Developer</span>
                </h2>
            </section>
            <section class="section">
                <div class="center">
                    <%= link_to(
                            image_tag("GitHub-Mark-Light-120px-plus-scaled.png",
                            { class: "banner-icon", size: "100x100", alt: "Link to github" } ),
                        "https://github.com/coped") %>
                    <%= link_to(
                            image_tag("linkedin-dark-scaled.png",
                            { class: "banner-icon", size: "100x100", alt: "Link to linkedin" } ),
                        "https://www.linkedin.com/in/dennis-cope/") %>
                    <%= mail_to("coped@tutanota.com",
                            image_tag("email-logo-dark-scaled.png",
                            { class: "banner-icon", size: "100x100", alt: "coped@tutanota" } )) %>
                </div>
            </section>
            <section class="section has-text-centered">
                <a id="banner-button" class="button is-inverted is-dark is-rounded is-outlined is-italic">
                    <p>Let's build something</p>
                </a>
            </section>
        </div>
    </div>
    <div class="hero-foot">
    </div>
</section>
<%= render 'layouts/navbar' %>
<section id="about" class="section">
    <div class="container">
        <h2 class="is-size-2 has-text-weight-light center title">About Me</h2>
        <div class="columns center">
            <div class="column is-two-thirds">
                <hr class="hr">
            </div>
        </div>
        <div class="columns center">
            <div class="column is-two-thirds">
                <p class="paragraph">
                    I'm a self-taught developer, and I like making Rails applications (though any new tech is fun to learn). 
                    I started teaching myself how to program in the first few months of 2019, and I made it a goal of mine 
                    to become a professional developer before the year's end.
                </p>
                <p class="paragraph">/* This bio is still a work in progress */</p>
                <p class="paragraph">Some of my interests include:</p>
                <ul class="paragraph">
                    <li>Learning challenging concepts</li>
                    <li>Slammin' keys on my piano</li>
                    <li>Showing affection to pets</li>
                    <li>Developing a bangin' website</li>
                </ul>
                <p>Catch me next time when I decide to update this page.</p>
            </div>
        </div>
    </div>
</section>
<section id="tools" class="section">
    <div class="container">
        <h2 class="is-size-2 has-text-weight-light center title">My Favorite Tools</h2>
        <div class="columns center">
            <div class="column">
                <hr class="hr">
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="notification">
                    <h3 class="subtitle has-text-centered has-text-weight-bold">Back end</h3>
                    <div class="has-text-left">
                        <div class="columns is-vertical-center">
                            <%= image_tag("icons/ruby-logo.png", { style: "max-width: 65px", alt: "Ruby logo", class: "column" }) %>
                            <p class="column is-7">Ruby</p>
                        </div>
                        <div class="columns is-vertical-center">
                            <%= image_tag("icons/rails-logo.png", { style: "max-width: 65px", alt: "Rails logo", class: "column" }) %>
                            <p class="column is-7">Ruby on Rails</p>
                        </div>
                        <div class="columns is-vertical-center">
                            <%= image_tag("icons/rspec-logo-trans.png", { style: "max-width: 65px", alt: "RSpec logo", class: "column" }) %>
                            <p class="column is-7">RSpec</p>
                        </div>
                        <div class="columns is-vertical-center">
                            <%= image_tag("icons/postgresql-logo.png", { style: "max-width: 65px", alt: "PostgreSQL logo", class: "column" }) %>
                            <p class="column is-7">PostgreSQL</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="notification">
                    <h3 class="subtitle has-text-centered has-text-weight-bold">Front end</h3>
                    <div class="has-text-left">
