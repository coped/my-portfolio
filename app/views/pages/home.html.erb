                            <%= image_tag("icons/HTML5-logo.png", { style: "max-width: 65px", alt: "HTML logo", class: "column" }) %>
                            <p class="column is-7">HTML5</p>
                        </div>
                        <div class="columns is-vertical-center">
                            <%= image_tag("icons/javascript-logo.png", { style: "max-width: 65px", alt: "Javascript logo", class: "column" }) %>
                            <p class="column is-7">JavaScript</p>
                        </div>
                        <div class="columns is-vertical-center">
                            <%= image_tag("icons/css-logo.png", { style: "max-width: 65px", alt: "CSS logo", class: "column" }) %>
                            <p class="column is-7">CSS</p>
                        </div>
                        <div class="columns is-vertical-center">
                            <%= image_tag("icons/sass-logo.png", { style: "max-width: 65px", alt: "Sass logo", class: "column" }) %>
                            <p class="column is-7">Sass</p>
                        </div>

                        <div class="columns is-vertical-center">
                            <%= image_tag("icons/bulma-logo.png", { style: "max-width: 65px", alt: "Bulma logo", class: "column" }) %>
                            <p class="column is-7">Bulma</p>
                        </div>
