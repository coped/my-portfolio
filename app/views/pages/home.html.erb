<section id="contact" class="section">
    <div class="container">
        <h2 class="is-size-2 has-text-weight-light center title">Contact</h2>
        <hr>
        <%= render "layouts/flash" %>
        <div class="columns">
            <div class="column"></div>
            <div class="column is-two-thirds">
                <p class="paragraph">
                    Questions or concerns? I can be contacted by <%= link_to("github", "https://github.com/coped") %> or by 
                    <%= mail_to("coped@tutanota.com", "email") %> at <strong>coped@tutanota.com</strong>. You can also use 
                    the form below to email me directly.
                    I'll reply promptly.
                </p>
                <%= form_with(scope: :contact, url: contact_path) do |f| %>
                    <div class="field">
                        <%= f.label :name, { class: "label" } %>
                        <div class="control">
                            <%= f.text_field :name, { class: "input", placeholder: "John Doe", required: "true" } %>
                        </div>
                    </div>

                    <div class="field">
                        <%= f.label :email, { class: "label" } %>
                        <div class="control">
                            <%= f.email_field :email, { class: "input", placeholder: "example@email.com", required: "true" } %>
                        </div>
                    </div>

                    <div class="field">
                        <%= f.label :message, { class: "label"} %>
                        <div class="control">
                            <%= f.text_area :message, { class: "textarea", rows: "7", placeholder: "Hello!", required: "true" } %>
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <%= f.submit :submit, { class: "button is-link" } %>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="column"></div>
        </div>
    </div>
</section>